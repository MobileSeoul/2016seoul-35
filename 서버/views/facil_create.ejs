                <th scope="row">평균등급</th>
                <td><input class="form-control" type="text" name="avg" id="avg"></td>
            </tr>
            <tr>
                <th scope="row">시설환경등급</th>
                <td><input class="form-control" type="text" name="mang" id="mang"></td>
            </tr>
