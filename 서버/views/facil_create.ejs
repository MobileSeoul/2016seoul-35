    <form id="uploadForm" enctype="multipart/form-data" method="post" action="/facil/upload" >
         
 <div class="container">    
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">시설 추가 페이지</div>
        <table class="table">

            <tr>
                <th scope="row">이름</th>
                <td><input class="form-control" type="text" name="name" id="name"></td>
